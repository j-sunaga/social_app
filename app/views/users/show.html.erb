<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="common-container">
        <h4>ユーザ情報</h4>
        <% if @user.image.url then %>
          <div class="user-img">
            <%= image_tag @user.image.url %>
          </div>
        <% end %>
        <p>ユーザ名 : <%= @user.name %></p>
        <p>Email : <%= @user.email %></p>
      </div>
    </div>
  </div>
</div>

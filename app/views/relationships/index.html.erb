<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="sign-up">
        <h4>利用者リスト</h4>
        <div class="relationship_table">

        <table class="table">
            <thead>
              <tr>
                <th scope="col">ユーザ名</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
              </tr>
            </thead>

          <tbody>
            <% @users.each do |user| %>
            <% if current_user.id == user.id then %>
            <% next %>
            <% end %>


            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>

              <% if current_user.friend?(user) then %>
              <td><%= link_to '友達解除', relationship_path(user.id), method: :delete ,data: { confirm: '友達登録を削除していいですか？' } %></td>
              <% else %>
              <td><%= form_with(model:@relationship, local: true) do |form| %>
              <%= form.hidden_field :id, :value => "#{user.id}" %>
                <div class="actions">
                <%= form.submit "友達登録"%>
                </div>
              <% end %>
              </td>
              <% end %>
              </tr>
            <% end %>

          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div>

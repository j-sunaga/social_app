<!DOCTYPE html>
<html>
  <head>
    <title>SocialApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <header class="header">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-1">
          <%= image_tag('facebook.png') %>
        </div>
        <div class="col-md-6">
            <p></p>
        </div>
        <% if logged_in? %>
          <div class="col-md-1">
            <p><%= link_to "#{current_user.name}", user_path(current_user.id) %></p>
          </div>
          <div class="col-md-1">
            <p><%= link_to "タイムライン", timelines_path %></p>
          </div>
          <div class="col-md-1">
            <p><%= link_to "新規投稿", new_timeline_path %></p>
          </div>
          <div class="col-md-1">
            <p><%= link_to "利用者リスト", relationships_path %></p>
          </div>
          <div class="col-md-1">
            <p><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></p>
          </div>
        <% else %>
        <div class="col-md-3">
        </div>
          <div class="col-md-1 offset-md-2">
              <p><%= link_to "会員登録", new_user_path %></p>
          </div>
          <div class="col-md-1">
             <p><%= link_to "ログイン", new_session_path %></p>
          </div>
        <% end %>
      </div>
      </div>
    </header>

    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <div class="main">

          <%= yield %>

    </div>

  </body>
</html>

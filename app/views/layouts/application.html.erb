<!DOCTYPE html>
<html>
  <head>
    <title>SocialApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <div class="container">
    <header class="header">
      <ul class="row">
        <% if logged_in? %>
          <li class="col-md-4"><%= link_to "#{current_user.name}", user_path(current_user.id) %></li>
          <li class="col-md-4"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li class="col-md-4"><%= link_to "会員登録", new_user_path %></li>
          <li class="col-md-4"><%= link_to "ログイン", new_session_path %></li>
        <% end %>
      </ul>
    </header>


    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <%= yield %>

    </div>
  </body>
</html>
